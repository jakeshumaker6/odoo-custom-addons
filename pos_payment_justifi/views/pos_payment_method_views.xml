<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Extend POS Payment Method form to add JustiFi terminal fields -->
    <record id="pos_payment_method_view_form_inherit_justifi" model="ir.ui.view">
        <field name="name">pos.payment.method.form.inherit.justifi</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='use_payment_terminal']" position="after">
                <field name="justifi_terminal_id"
                       invisible="use_payment_terminal != 'justifi'"
                       required="use_payment_terminal == 'justifi'"
                       placeholder="trm_xxxxx"/>
                <field name="justifi_payment_provider_id"
                       invisible="use_payment_terminal != 'justifi'"
                       required="use_payment_terminal == 'justifi'"/>
            </xpath>
        </field>
    </record>

</odoo>
