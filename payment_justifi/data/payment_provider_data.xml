<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- JustiFi Payment Provider -->
        <record id="payment_provider_justifi" model="payment.provider">
            <field name="name">JustiFi</field>
            <field name="code">justifi</field>
            <field name="sequence">100</field>
            <field name="state">disabled</field>
            <field name="is_published">False</field>
            <field name="pre_msg">
                <![CDATA[<p>Pay securely with your credit or debit card via JustiFi.</p>]]>
            </field>
            <field name="pending_msg">
                <![CDATA[<p>Your payment is being processed. You will receive a confirmation once the payment is complete.</p>]]>
            </field>
            <field name="done_msg">
                <![CDATA[<p>Your payment has been successfully processed. Thank you for your payment!</p>]]>
            </field>
            <field name="cancel_msg">
                <![CDATA[<p>Your payment has been cancelled.</p>]]>
            </field>
        </record>

    </data>
</odoo>
